    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // 購物車系統（保持不變）
    let cart = [];
    let pickupCounter = localStorage.getItem('pickupCounter') ? parseInt(localStorage.getItem('pickupCounter')) : 1;

    const cartBadge = document.getElementById('cartBadge');
    const cartItems = document.getElementById('cartItems');
    const cartTotal = document.getElementById('cartTotal');
    const cartSummary = document.getElementById('cartSummary');
    const cartToggle = document.getElementById('cartToggle');
    const diningMethod = document.getElementById('diningMethod');
    const dineinSection = document.getElementById('dineinSection');
    const takeawaySection = document.getElementById('takeawaySection');
    const pickupNumber = document.getElementById('pickupNumber');
    const tableNumber = document.getElementById('tableNumber');

    // === 動態載入 menu.json ===
    async function loadMenu() {
        try {
            const response = await fetch('menu.json');
            const menuData = await response.json();

            const menuContainer = document.getElementById('menu');
            menuContainer.innerHTML = ''; // 清空靜態內容

            menuData.forEach(category => {
                const categorySection = document.createElement('div');
                categorySection.className = 'menu-category';
                categorySection.innerHTML = `
                    <h2 class="category-title"><i class="fas fa-leaf me-2"></i>${category.category}</h2>
                    <div class="row" id="row-${category.category.replace(/\s/g, '')}"></div>
                `;
                menuContainer.appendChild(categorySection);

                const row = categorySection.querySelector('.row');

                category.items.forEach(item => {
                    const col = document.createElement('div');
                    col.className = 'col-md-6 col-lg-4';
                    col.innerHTML = `
                        <div class="menu-item">
                            <div class="item-img" style="background-image: url('${item.image}')" 
                                 data-label="${item.label || ''}"></div>
                            <div class="item-body">
                                <h5 class="item-title">${item.title}</h5>
                                <p class="item-desc">${item.desc}</p>
                                <div class="spice-level">
                                    ${'<i class="fas fa-pepper-hot spice-pepper"></i>'.repeat(item.spice)}
                                </div>
                                <div class="item-price">$${item.price}</div>
                                <div class="quantity-control">
                                    <div class="quantity-btn minus">-</div>
                                    <input type="text" class="quantity-input" value="0" readonly>
                                    <div class="quantity-btn plus">+</div>
                                </div>
                                <button class="add-to-cart">加入購物車</button>
                            </div>
                        </div>
                    `;
                    row.appendChild(col);
                });
            });

            // 載入完成後綁定事件
            bindQuantityControls();
            bindAddToCartButtons();
        } catch (error) {
            console.error('載入菜單失敗:', error);
            document.getElementById('menu').innerHTML = '<p class="text-danger text-center">載入菜單失敗，請稍後再試。</p>';
        }
    }

    // 數量控制綁定
    function bindQuantityControls() {
        document.querySelectorAll('.quantity-control').forEach(control => {
            const minus = control.querySelector('.minus');
            const plus = control.querySelector('.plus');
            const input = control.querySelector('.quantity-input');
            const addBtn = control.closest('.menu-item').querySelector('.add-to-cart');

            plus.addEventListener('click', () => {
                let qty = parseInt(input.value) || 0;
                input.value = qty + 1;
                updateAddButton(addBtn, qty + 1);
            });

            minus.addEventListener('click', () => {
                let qty = parseInt(input.value) || 0;
                if (qty > 0) {
                    input.value = qty - 1;
                    updateAddButton(addBtn, qty - 1);
                }
            });
        });
    }

    function updateAddButton(btn, qty) {
        btn.textContent = qty > 0 ? `加入購物車 (${qty})` : '加入購物車';
    }

    // 加入購物車綁定
    function bindAddToCartButtons() {
        document.querySelectorAll('.add-to-cart').forEach(btn => {
            btn.addEventListener('click', () => {
                const menuItem = btn.closest('.menu-item');
                const title = menuItem.querySelector('.item-title').textContent;
                const price = parseInt(menuItem.querySelector('.item-price').textContent.replace('$', ''));
                const qty = parseInt(menuItem.querySelector('.quantity-input').value) || 0;

                if (qty > 0) {
                    const existing = cart.find(item => item.title === title);
                    if (existing) existing.quantity += qty;
                    else cart.push({ title, price, quantity: qty });

                    updateCartDisplay();
                    menuItem.querySelector('.quantity-input').value = 0;
                    updateAddButton(btn, 0);

                    btn.textContent = '已加入!';
                    btn.style.background = '#27ae60';
                    setTimeout(() => {
                        btn.textContent = '加入購物車';
                        btn.style.background = '';
                    }, 1000);
                }
            });
        });
    }

    // === 以下為原有購物車邏輯（保持不變）===
    function updateCartDisplay() {
        const totalItems = cart.reduce((s, i) => s + i.quantity, 0);
        const totalPrice = cart.reduce((s, i) => s + i.price * i.quantity, 0);
        cartBadge.textContent = totalItems;
        cartTotal.textContent = `$${totalPrice}`;

        if (cart.length === 0) {
            cartItems.innerHTML = `<div class="empty-cart"><i class="fas fa-shopping-cart fa-2x mb-3 text-muted"></i><p>購物車是空的</p></div>`;
        } else {
            cartItems.innerHTML = '';
            cart.forEach((item, i) => {
                const el = document.createElement('div');
                el.className = 'cart-item d-flex justify-content-between align-items-center mb-2';
                el.innerHTML = `
                    <div>
                        <div class="cart-item-name">${item.title} x${item.quantity}</div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="cart-item-price">$${item.price * item.quantity}</div>
                        <i class="fas fa-times remove-item text-danger" style="cursor:pointer;"></i>
                    </div>
                `;
                el.querySelector('.remove-item').onclick = () => {
                    cart.splice(i, 1);
                    updateCartDisplay();
                };
                cartItems.appendChild(el);
            });
        }
    }

    cartToggle.onclick = () => {
        const hidden = cartSummary.style.transform.includes('100%');
        cartSummary.style.transform = hidden ? 'translateY(0)' : 'translateY(100%)';
    };

    document.getElementById('clearCart').onclick = () => {
        cart = [];
        updateCartDisplay();
    };

    diningMethod.addEventListener('change', () => {
        if (diningMethod.value === 'takeaway') {
            dineinSection.style.display = 'none';
            takeawaySection.style.display = 'block';
            const num = String(pickupCounter).padStart(3, '0');
            pickupNumber.textContent = num;
        } else {
            dineinSection.style.display = 'block';
            takeawaySection.style.display = 'none';
        }
    });

    document.getElementById('confirmOrder').onclick = () => {
        if (cart.length === 0) {
            alert('購物車是空的！');
            return;
        }

        if (diningMethod.value === 'dinein' && !tableNumber.value.trim()) {
            alert('請輸入桌號！');
            return;
        }

        const method = diningMethod.value;
        let message = '';
        let pickupNum = '';

        if (method === 'takeaway') {
            pickupNum = String(pickupCounter).padStart(3, '0');
            message = `您的取餐號碼是 <strong>${pickupNum}</strong><br>餐點準備好後將呼叫號碼。`;
            pickupCounter++;
            localStorage.setItem('pickupCounter', pickupCounter);
        } else {
            message = `已通知廚房，餐點將送至 <strong>${tableNumber.value}</strong> 號桌。`;
        }

        document.getElementById('finalPickupNumber').textContent = method === 'takeaway' ? pickupNum : tableNumber.value;
        document.getElementById('successMessage').innerHTML = message;

        cart = [];
        updateCartDisplay();
        bootstrap.Modal.getInstance(document.getElementById('checkoutModal')).hide();
        new bootstrap.Modal(document.getElementById('successModal')).show();
        cartSummary.style.transform = 'translateY(100%)';
    };

    // 初始化
    loadMenu();
    updateCartDisplay();
</script>
</html>
